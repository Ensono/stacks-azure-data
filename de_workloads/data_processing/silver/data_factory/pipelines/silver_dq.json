{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory name"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "[concat(parameters('factoryName'), '/silver_dq')]",
            "type": "Microsoft.DataFactory/factories/pipelines",
            "apiVersion": "2018-06-01",
            "properties": {
                "description": "Bronze to Silver data transformation, with data quality checks.",
                "activities": [
                    {
                        "name": "Silver",
                        "type": "DatabricksSparkPython",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "0.12:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "pythonFile": "dbfs:/FileStore/scripts/silver/silver.py",
                            "parameters": [],
                            "libraries": [
                                {
                                    "whl": "dbfs:/FileStore/jars/pysparkle-latest-py3-none-any.whl"
                                }
                            ]
                        },
                        "linkedServiceName": {
                            "referenceName": "ls_Databricks_Small",
                            "type": "LinkedServiceReference"
                        }
                    },
                    {
                        "name": "DataQuality",
                        "type": "DatabricksSparkPython",
                        "dependsOn": [
                            {
                                "activity": "Silver",
                                "dependencyConditions": [
                                    "Succeeded"
                                ]
                            }
                        ],
                        "policy": {
                            "timeout": "0.12:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "pythonFile": "dbfs:/FileStore/scripts/silver/silver_dq.py",
                            "parameters": [],
                            "libraries": [
                                {
                                    "whl": "dbfs:/FileStore/jars/pysparkle-latest-py3-none-any.whl"
                                }
                            ]
                        },
                        "linkedServiceName": {
                            "referenceName": "ls_Databricks_Small",
                            "type": "LinkedServiceReference"
                        }
                    }
                ],
                "policy": {
                    "elapsedTimeMetric": {},
                    "cancelAfter": {}
                },
                "folder": {
                    "name": "Process"
                },
                "annotations": []
            },
            "dependsOn": []
        }
    ]
}
